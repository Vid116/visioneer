# Server Configuration
PORT=3000
NODE_ENV=development

# Redis Configuration
# Use "localhost" for local dev, "redis" when running in Docker
REDIS_HOST=localhost
REDIS_PORT=6379

# ESP32 Configuration
# Use "http://localhost:3001" for mock server
# Use "http://192.168.x.x" for real ESP32 hardware
ESP32_BASE_URL=http://localhost:3001

# Alchemy Webhook Configuration
# 1. Go to https://dashboard.alchemy.com/webhooks
# 2. Create a new webhook
# 3. Copy the signing key here
ALCHEMY_SIGNING_KEY=your_signing_key_here

# Mock ESP32 Server (for simulation mode)
MOCK_ESP32_PORT=3001
